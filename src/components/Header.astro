---
import Logo from "../components/Logo.astro";

---
const navItems = [
  { label: 'HOME', href: '/' },
  { label: 'ABOUT US', href: '/about' },
  { label: 'SERVICES', href: '/services' },
  { label: 'SECTORS', href: '/sectors' },
  { label: 'WORK FOR US', href: '/careers' },
  { label: 'BLOG', href: '/blog' },
  { label: 'CONTACT US', href: '/contact' },
];
---

<header class="w-full">
  <!-- Top strip (full width) -->
  <div class="w-full bg-[#173B63] text-white">
    <div class="mx-auto flex w-full max-w-6xl items-center justify-between px-6 py-2 sm:px-12">
      <a href="#" class="text-[12px] font-semibold tracking-widest uppercase underline underline-offset-4">
        CLICK HERE FOR CURRENT NATIONAL THREAT LEVEL
      </a>

      <div class="flex items-center gap-6 text-sm">
        <a href="tel:02088996959" class="flex items-center gap-2 font-semibold">
          <!-- phone icon -->
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 24 24" fill="currentColor">
            <path d="M2.25 6.75c0 8.284 6.716 15 15 15h1.5A2.25 2.25 0 0 0 21 19.5v-3.056a2.25 2.25 0 0 0-1.72-2.186l-3.12-.78a2.25 2.25 0 0 0-2.265.832l-.96 1.2a12.06 12.06 0 0 1-5.516-5.516l1.2-.96a2.25 2.25 0 0 0 .832-2.265l-.78-3.12A2.25 2.25 0 0 0 6.306 1.5H3.75A2.25 2.25 0 0 0 1.5 3.75v3z"/>
          </svg>
          020 8899 6959
        </a>

        <a href="mailto:hello@kingfishersec.com" class="flex items-center gap-2 font-semibold">
          <!-- mail icon -->
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 24 24" fill="currentColor">
            <path d="M1.5 8.67v10.83A2.25 2.25 0 0 0 3.75 21.75h16.5A2.25 2.25 0 0 0 22.5 19.5V8.67l-9.54 6.36a1.5 1.5 0 0 1-1.92 0L1.5 8.67z"/>
            <path d="M22.5 6.75A2.25 2.25 0 0 0 20.25 4.5H3.75A2.25 2.25 0 0 0 1.5 6.75l10.17 6.78a.75.75 0 0 0 .96 0L22.5 6.75z"/>
          </svg>
          hello@kingfishersec.com
        </a>
      </div>
    </div>
  </div>

  <!-- Main navbar (full width white) -->
  <div class="w-full bg-white">
    <div class="mx-auto flex w-full max-w-6xl items-center justify-between px-6 py-5 sm:px-12">
      <!-- Logo -->
      <a href="/" class="flex items-center gap-3">
        <!-- Placeholder logo box (replace with your image/svg) -->
        <div class="h-10 w-10 rounded bg-[#173B63]/10"></div>
        <div class="leading-tight">
          <div class="text-lg font-extrabold tracking-wide text-[#173B63]">KINGFISHER SEC</div>
          <div class="text-[10px] font-semibold tracking-widest text-orange-500">SECURITY • EVENTS • CONCIERGE</div>
        </div>
      </a>

      <!-- Nav -->
      <nav class="hidden items-center gap-8 md:flex">
        {navItems.map((item) => (
          <a
            href={item.href}
            class="text-sm font-semibold tracking-wide text-[#173B63] hover:text-orange-500"
          >
            {item.label}
          </a>
        ))}
      </nav>

      <!-- Right (Login) -->
      <div class="flex items-center gap-3">
        <a
          href="/login"
          class="inline-flex items-center gap-2 rounded bg-orange-500 px-5 py-3 text-sm font-bold text-white hover:bg-orange-600"
        >
          <!-- login icon -->
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 24 24" fill="currentColor">
            <path d="M15.75 9V5.25A2.25 2.25 0 0 0 13.5 3h-6A2.25 2.25 0 0 0 5.25 5.25v13.5A2.25 2.25 0 0 0 7.5 21h6a2.25 2.25 0 0 0 2.25-2.25V15"/>
            <path d="M18 15l3-3m0 0l-3-3m3 3H9"/>
          </svg>
          LOGIN
        </a>

        <!-- Mobile menu button (optional) -->
        <button class="md:hidden rounded border border-slate-200 px-3 py-2 text-slate-700">
          Menu
        </button>
      </div>
    </div>

    <!-- Mobile nav (simple) -->
    <div class="border-t border-slate-100 md:hidden">
      <div class="mx-auto w-full max-w-6xl px-6 py-3 sm:px-12">
        <div class="flex flex-wrap gap-x-6 gap-y-3">
          {navItems.map((item) => (
            <a href={item.href} class="text-sm font-semibold text-[#173B63] hover:text-orange-500">
              {item.label}
            </a>
          ))}
        </div>
      </div>
    </div>
  </div>
</header>

