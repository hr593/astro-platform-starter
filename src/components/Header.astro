---
import Logo from '../components/Logo.astro';

const navItems = [
  { linkText: 'HOME', href: '/' },
  { linkText: 'ABOUT US', href: '/about' },
  { linkText: 'SERVICES', href: '/services' },
  { linkText: 'SECTORS', href: '/sectors' },
  { linkText: 'WORK FOR US', href: '/careers' },
  { linkText: 'BLOG', href: '/blog' },
  { linkText: 'CONTACT US', href: '/contact' },
];
---

<header class="border-b bg-white">
  <div class="mx-auto max-w-7xl px-4">
    <nav class="flex items-center justify-between py-4">

      <!-- Logo -->
      <a href="/" class="flex items-center gap-2">
        <Logo />
      </a>

      <!-- Navigation -->
      <ul class="hidden lg:flex items-center gap-6 text-sm font-semibold text-slate-700">
        {navItems.map((item) => (
          <li>
            <a
              href={item.href}
              class="hover:text-orange-500 transition-colors"
            >
              {item.linkText}
            </a>
          </li>
        ))}
      </ul>

      <!-- Login Button -->
      <a
        href="/login"
        class="rounded-lg bg-orange-500 px-5 py-2 text-sm font-bold text-white hover:bg-orange-600 transition"
      >
        LOGIN
      </a>

    </nav>
  </div>
</header>
