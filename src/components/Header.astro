---
import Logo from "../components/Logo.astro";

---
---
const navItems = [
  { text: "HOME", href: "/" },
  { text: "ABOUT US", href: "/about" },
  { text: "SERVICES", href: "/services", hasDropdown: true },
  { text: "SECTORS", href: "/sectors", hasDropdown: true },
  { text: "WORK FOR US", href: "/work-for-us" },
  { text: "BLOG", href: "/blog" },
  { text: "CONTACT US", href: "/contact" },
];
---

<header class="w-full">
  <!-- Top blue bar -->
  <div class="w-full bg-[#163b66] text-white">
    <div class="mx-auto flex w-full max-w-6xl items-center justify-between px-6 py-2 sm:px-12">
      <a href="#" class="text-xs font-semibold tracking-widest uppercase hover:opacity-90">
        CLICK HERE FOR CURRENT NATIONAL THREAT LEVEL
      </a>

      <div class="hidden items-center gap-6 text-sm sm:flex">
        <a href="tel:02088996959" class="flex items-center gap-2 hover:opacity-90">
          <!-- phone icon -->
          <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
            <path d="M6.62 10.79a15.05 15.05 0 006.59 6.59l2.2-2.2a1 1 0 011.01-.24c1.12.37 2.33.57 3.58.57a1 1 0 011 1V20a1 1 0 01-1 1C10.07 21 3 13.93 3 5a1 1 0 011-1h3.5a1 1 0 011 1c0 1.25.2 2.46.57 3.59a1 1 0 01-.25 1.01l-2.2 2.19z"/>
          </svg>
          020 8899 6959
        </a>

        <a href="mailto:hello@kingfishersec.com" class="flex items-center gap-2 hover:opacity-90">
          <!-- mail icon -->
          <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
            <path d="M20 4H4a2 2 0 00-2 2v12a2 2 0 002 2h16a2 2 0 002-2V6a2 2 0 00-2-2zm0 4l-8 5-8-5V6l8 5 8-5v2z"/>
          </svg>
          hello@kingfishersec.com
        </a>
      </div>
    </div>
  </div>

  <!-- Main white nav -->
  <div class="w-full bg-white text-[#0b1b2b] shadow-sm">
    <div class="mx-auto flex w-full max-w-6xl items-center justify-between px-6 py-4 sm:px-12">
      <!-- Logo -->
      <a href="/" class="flex items-center gap-3">
        <!-- simple placeholder logo mark -->
        <div class="h-10 w-10 rounded bg-[#163b66]"></div>
        <div class="leading-tight">
          <div class="text-lg font-bold tracking-widest">KINGFISHER SEC</div>
          <div class="text-[10px] tracking-widest text-[#e28a2b]">SECURITY • EVENTS • CONCIERGE</div>
        </div>
      </a>

      <!-- Nav links -->
      <nav class="hidden items-center gap-7 lg:flex">
        {navItems.map((item) => (
          <a
            href={item.href}
            class="relative text-sm font-semibold tracking-wider hover:text-[#e28a2b]"
          >
            <span class="inline-flex items-center gap-1">
              {item.text}
              {item.hasDropdown ? (
                <svg width="14" height="14" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true" class="opacity-70">
                  <path d="M7 10l5 5 5-5H7z"/>
                </svg>
              ) : null}
            </span>
          </a>
        ))}
      </nav>

      <!-- Login button -->
      <a
        href="/login"
        class="inline-flex items-center gap-2 rounded bg-[#e28a2b] px-5 py-3 text-sm font-bold text-white hover:opacity-95"
      >
        <span class="inline-flex h-8 w-8 items-center justify-center rounded bg-white/20">
          <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
            <path d="M10 17l1.41-1.41L8.83 13H21v-2H8.83l2.58-2.59L10 7l-7 7 7 7zm-7 4h8v-2H3V5h8V3H3a2 2 0 00-2 2v14a2 2 0 002 2z"/>
          </svg>
        </span>
        LOGIN
      </a>
    </div>

    <!-- mobile nav (simple) -->
    <div class="block border-t border-black/10 lg:hidden">
      <div class="mx-auto w-full max-w-6xl px-6 py-3 sm:px-12">
        <div class="flex flex-wrap gap-x-5 gap-y-2 text-sm font-semibold tracking-wider">
          {navItems.map((item) => (
            <a href={item.href} class="hover:text-[#e28a2b]">
              {item.text}
            </a>
          ))}
        </div>
      </div>
    </div>
  </div>
</header>


